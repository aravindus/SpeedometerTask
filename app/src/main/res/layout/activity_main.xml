<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootView"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <com.aravind.speedometer.SpeedometerView
        android:id="@+id/speedometer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:borderColor="#402c47"
        app:borderSize="8dp"
        android:visibility="invisible"
        app:fillColor="#d83a78"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5"
        app:maxSpeed="100"
        app:metricText="km/h"
        app:textColor="#f5f5f5" />

    <com.aravind.speedometer.TachometerView
        android:id="@+id/tachometerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:borderColor="#E6DF19"
        app:borderSize="8dp"
        app:fillColor="#061DE6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5"
        app:maxSpeed="1000"
        app:metricText="RPM"
        app:textColor="#FD44FF00" />

</androidx.constraintlayout.widget.ConstraintLayout>